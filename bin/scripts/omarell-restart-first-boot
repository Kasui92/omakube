#!/bin/bash

# Reset Omarell First Boot
# Use this only if you need to reset the first boot flag

FIRST_BOOT_FLAG="$HOME/.local/state/omarell/first-boot-done"

if [ -f "$FIRST_BOOT_FLAG" ]; then
    rm "$FIRST_BOOT_FLAG"
    cp ~/.local/share/omarell/config/autostart/omarell-first-boot.desktop ~/.config/autostart/omarell-first-boot.desktop
    echo "First boot flag reset. Next login will trigger first boot setup."
else
    echo "First boot flag was not set."
fi
