#!/bin/bash

# Reset Omarell First Boot
# Use this only if you need to reset the first boot flag

INITRUN_FLAG="$HOME/.local/state/omarell/initrun-done"

if [ -f "$INITRUN_FLAG" ]; then
    rm "$INITRUN_FLAG"
    cp ~/.local/share/omarell/config/autostart/omarell-initrun.desktop ~/.config/autostart/omarell-initrun.desktop
    echo "First boot flag reset. Next login will trigger first boot setup."
else
    echo "First boot flag was not set."
fi
